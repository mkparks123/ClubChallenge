
@model ClubChallenge.Models.Event
@{
    ViewBag.Title = "Event Details";
}

<h1>Event Details</h1>

@using (Html.BeginForm("EventEdit", "Admin", new { id = Model.Id }))//passing member id to view
{

    <h2>Name of Event: @Model.Name</h2>
    <h2>Date of Event: @Model.EventDate</h2>
    

    <input type="submit" value="Edit" />
}


<input type="button" value="Go Back" onclick="location.href='@Url.Action("Events", "Admin")'"/>